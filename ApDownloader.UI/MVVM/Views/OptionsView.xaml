<UserControl x:Class="ApDownloader.UI.MVVM.Views.OptionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Background="Transparent"
             d:DesignHeight="600" d:DesignWidth="600">
    <Grid Margin="20">
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontSize" Value="28" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>
            <Style TargetType="CheckBox">
                <Setter Property="Foreground" Value="White" />
                <Setter Property="FontSize" Value="28" />
                <Setter Property="BorderBrush" Value="White" />
                <Setter Property="BorderThickness" Value="2" />
                <Setter Property="Background" Value="LightBlue" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="IsChecked" Value="True" />
                <Setter Property="LayoutTransform">
                    <Setter.Value>
                        <ScaleTransform ScaleX="1.2" ScaleY="1.2" />
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
        <StackPanel>
            <TextBlock Text="Associated Downloads:"
                       Margin="0"
                       FontSize="36" />
            <StackPanel Margin="15 0 ">
                <StackPanel Orientation="Horizontal">
                    <CheckBox Margin="5" Name="ExtraStockCheckbox" Click="ResetDirty" />
                    <TextBlock VerticalAlignment="Center" Text="Extra Stock" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <CheckBox Margin="5" Name="BrandingPatchCheckbox" Click="ResetDirty" />
                    <TextBlock VerticalAlignment="Center" Text="Branding Patch" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <CheckBox Margin="5" Name="LiveryPackCheckbox" Click="ResetDirty" />
                    <TextBlock VerticalAlignment="Center" Text="Livery Pack" />
                </StackPanel>
            </StackPanel>
            <TextBlock Text="Download Location:" FontSize="36" />
            <TextBox TextChanged="ResetDirty" Name="RootFolder" Style="{StaticResource FilepathTextBox}" />
            <Button HorizontalAlignment="Left" Margin="0 10" Content="Set Folder Location" Width="200"
                    Click="FolderSelection"
                    Style="{StaticResource LoginButton}" />
        </StackPanel>
        <StackPanel VerticalAlignment="Bottom">
            <TextBlock Name="ApplyResponse" Visibility="Hidden" HorizontalAlignment="Center"
                       Text="Options Applied Successfully"
                       Padding="10"
                       Foreground="LightGray" />
            <Button IsEnabled="False" HorizontalAlignment="Center" Content="Apply" Width="100"
                    Click="ApplySettings" Style="{StaticResource LoginButton}" Name="ApplyButton" />
        </StackPanel>
    </Grid>
</UserControl>